{
    "name": "gdb-helper",
    "displayName": "GDB Helper",
    "description": "Support multiple cursors. Accessible through right-clicking menu items in file explorer, tabs and main editor window.",
    "version": "0.2.8",
    "publisher": "J-jaeyoung",
    "repository": {},
    "icon": "images/icon.png",
    "engines": {
        "vscode": "^1.20.0"
    },
    "keywords": [
        "copy",
        "file path",
        "line number",
        "clipboard"
    ],
    "categories": [
        "Other"
    ],
    "activationEvents": [
        "onCommand:gdb-helper.bpLocation",
        "onCommand:gdb-helper.both",
        "onCommand:gdb-helper.path-only",
        "onCommand:gdb-helper.withText",
        "onCommand:gdb-helper.snippet",
        "onCommand:gdb-helper.simple-copy-line"
    ],
    "main": "./extension",
    "contributes": {
        "keybindings": [
            {
                "command": "gdb-helper.bpLocation",
                "key": "alt+l",
                "when": "editorTextFocus"
            }
        ],
        "commands": [
            {
                "command": "gdb-helper.copyAndSaveSnippet",
                "title": "copy_snippet_and_save_or_append_to_file"
            },
            {
                "command": "gdb-helper.simple-copy-line",
                "title": "Copy Relative Path SIMPLE COPY LINE"
            },
            {
                "command": "gdb-helper.bpLocation",
                "title": "Copy Relative Path and Line Numbers for Breakpoint Location"
            },
            {
                "command": "gdb-helper.both",
                "title": "Copy Relative Path and Line Numbers"
            },
            {
                "command": "gdb-helper.path-only",
                "title": "Copy Relative Path"
            },
            {
                "command": "gdb-helper.withText",
                "title": "Copy Relative Path with Line Numbers and with Text"
            },
            {
                "command": "gdb-helper.snippet",
                "title": "Copy Relative Path and Snippet without Code Block"
            }
        ],
        "menus": {
            "explorer/context": [
                {
                    "command": "gdb-helper.bpLocation"
                },
                {
                    "command": "gdb-helper.both"
                },
                {
                    "command": "gdb-helper.path-only"
                },
                {
                    "command": "gdb-helper.withText"
                },
                {
                    "command": "gdb-helper.snippet"
                },
                {
                    "command": "gdb-helper.simple-copy-line"
                }
            ],
            "editor/title/context": [
                {
                    "command": "gdb-helper.bpLocation"
                },
                {
                    "command": "gdb-helper.both"
                },
                {
                    "command": "gdb-helper.path-only"
                },
                {
                    "command": "gdb-helper.withText"
                },
                {
                    "command": "gdb-helper.snippet"
                },
                {
                    "command": "gdb-helper.simple-copy-line"
                }
            ],
            "editor/context": [
                {
                    "command": "gdb-helper.bpLocation"
                },
                {
                    "command": "gdb-helper.both"
                },
                {
                    "command": "gdb-helper.path-only"
                },
                {
                    "command": "gdb-helper.withText"
                },
                {
                    "command": "gdb-helper.snippet"
                },
                {
                    "command": "gdb-helper.simple-copy-line"
                }
            ]
        },
        "configuration": {
            "type": "object",
            "title": "Copy Relative Path and Line Numbers",
            "properties": {
                "copyRelativePathAndLineNumbers.snippetSaveDirectory": {
                    "type": "string",
                    "default": "",
                    "description": "Directory (relative to workspace) to save snippet files."
                }
            }
        }
    },
    "scripts": {
        "postinstall": "node ./node_modules/vscode/bin/install",
        "test": "node ./node_modules/vscode/bin/test"
    },
    "devDependencies": {
        "typescript": "^2.6.1",
        "vscode": "^1.1.6",
        "eslint": "^4.11.0",
        "@types/node": "^14.18.63",
        "@types/mocha": "^2.2.42"
    },
    "dependencies": {
        "clipboardy": "^1.2.3"
    }
}